<div class="card input-card mt-4">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form class="card-body" id="newpost-form">
    <div class="mb-3">
      <label for="post-title-input" class="form-label">Title</label>
      <input class="form-control" type="text" id="post-title-input">
    </div>
    <div class="mb-3">
      <label for="post-content-input" class="form-label">Content</label>
      <textarea class="form-control" id="post-content-input"></textarea>
    </div>
    <div class="mb-3">
      <button class="btn" onclick="selectEmojis(event)">
        <img src="/assets/emojis/happy.svg" class="filter-grey" width="100px" id="emoji1"/>
      </button>
      <button class="btn" onclick="selectEmojis(event)">
        <img src="/assets/emojis/neutral.svg" class="filter-grey" width="100px"/>
      </button>
      <button class="btn" onclick="selectEmojis(event)">
        <img src="/assets/emojis/anxious.svg" class="filter-grey" width="100px"/>
      </button>
      <button class="btn" onclick="selectEmojis(event)">
        <img src="/assets/emojis/angry.svg" class="filter-grey" width="100px"/>
      </button>
      <button class="btn" onclick="selectEmojis(event)">
        <img src="/assets/emojis/sad.svg" class="filter-grey" width="100px"/>
      </button>
    </div>
    <div class="d-grid gap-2">
      <button class="btn btn-primary" type="submit" id="login-btn" onclick="newPostFormHandler(event)">Create</button>
    </div>
  </form>
</div>

<script src="/js/createPost.js"></script>
