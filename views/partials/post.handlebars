{{#each posts as |post|}}
<div class="stack-flex post-polaroid">
  <div class="trial">
    <div class="stack-flex post-content spaced">
      <div
        class="side-flex post-header spaced gap">
      <div alt="profile pic (pulled from?)">Image here</div>
      <div alt="username pulled from sql"> {{post.user.username}}</div>
      <div alt="post title pulled from sql. display on own line" class="post-title">{{post.title}}</div>
      </div>
      <div>{{post.content}}</div>
        <div alt="music embed">spotify here</div>
      </div>
  </div>
    <div class="post-footer side-flex spaced gap ">
      {{!-- the save icon needs to be at the end of this flex box.. --}}
      {{#each post.emojis as |emoji|}}
      <img src="{{emoji.url}}" width="70px">
      {{/each}}
      <button alt="{{post.id}}" class="btn save-btn" id="save-post-btn" onclick="savePostHandler(event)"><img src="assets/images/save-icon.png" class="save-icon"></button>
      <a href="/profile/edit/{{post.id}}">Edit</a>
  </div>
{{/each}}

<script src="/js/savePost.js"></script> 
