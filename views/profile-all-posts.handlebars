<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
        <div class="card" style="width: 18rem;">
            <img src="{{user.image}}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{user.name}}'s Profile Page</h5>
            </div>
        </div>
    <div class="container">
        <h1>My Posts</h1>
        {{#each posts}}
        <div class="profile">
            <div class="profile-body">
                <h3 class="mt-0">{{user.name}}</h5>
                <h4>{{title}} <small class="red">{{status}}</small></h4>
                <p>{{body}}</p>
                <small>{{date}}</small>
                <br>
            </div>
        </div>
        <hr>
        {{else}}
        <p>You do not have any posts ...</p>
        {{/each}}
    </div>
</div>